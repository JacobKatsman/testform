{% extends 'base.html.twig' %}
{% block content %}

{% if summ is defined and summ != 0 %}
<div class="container">
  <div class="row gx-12 gx-lg-12 h-100 align-items-center justify-content-center text-center">
    <div class="col-lg-12 col-sm-12 mb-12 form-ajout">
      Наша сумма:  {{ summ }}
      <a href="/test"> назад </a> 
     </div>
   </div>
</div>

{% else %}

{{ form_start(testform, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="container">
  <div class="row gx-12 gx-lg-12 h-100 align-items-center justify-content-center text-center">
    <div class="col-lg-12 col-sm-12 mb-12 form-ajout">
      
      {{ form_row(testform.productPrice, {'attr' : {'class' : 'form-control'}}  ) }}
      {{ form_row(testform.taxnumber,{'attr' : {'class' : 'form-control', 'value' : taxnumber}} ) }}
      

      {% if errors is defined and errors is not empty %}
       <ul style="color:red">
           {% for error in errors %}
               <li>{{ error }}</li>
           {% endfor %}
       </ul>
       {% endif %}

       {{ form_row(testform.submit,{'attr' : {'class' : 'btn btn-primary'}}  ) }}
              
      </div>
   </div>
</div>
{{ form_end(testform) }}
{% endif %}




{% endblock %}


